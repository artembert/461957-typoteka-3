{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "lib": [
      "es2019"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
