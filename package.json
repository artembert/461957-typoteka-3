{
  "name": "typoteka-3",
  "version": "1.0.0",
  "description": "Типотека",
  "main": "src/service/index.ts",
  "scripts": {
    "start": "node ./run-scripts/start.js",
    "start:prod": "node ./run-scripts/start.prod.js",
    "start:api": "npm run ts-node -- --project src/service/tsconfig.json src/service/index.ts --server | pino-pretty",
    "start:api:prod": "cross-env NODE_ENV=production node -r dotenv/config build/service/index.js --server | pino-pretty",
    "start:ssr": "npm run ts-node -- --project src/express/tsconfig.json src/express/index.ts | pino-pretty",
    "start:ssr:prod": "cross-env NODE_ENV=production node -r dotenv/config build/express/index.js | pino-pretty",
    "build": "npm run build:ts && npm run copy-static-assets",
    "build:ts": "npm run build:api && npm run build:ssr",
    "build:ssr": "tsc --build src/express --verbose",
    "build:api": "tsc --build src/service --verbose",
    "copy-static-assets": "node run-scripts/copy-static-assets.js",
    "lint": "eslint --ext .js,.ts src",
    "test:rest": "cross-env PORT=7777 LOG_LEVEL=error JWT_ACCESS_SECRET=YERBKFD%#ADFDS#8 JWT_REFRESH_SECRET=587%NLASD#9 JWT_ACCESS_EXPIRATION=50s JWT_REFRESH_EXPIRATION=1h jest --maxWorkers=1 src/service/server",
    "generate-database-mock": "ts-node --transpile-only src/service/index.ts --fill",
    "fill-db": "npm run ts-node -- src/service/index.ts --fill-db 50 | pino-pretty",
    "nodemon": "./node_modules/.bin/nodemon",
    "nodemon:api": "npm run nodemon -- --config nodemon.api.json",
    "nodemon:ssr": "npm run nodemon -- --config nodemon.ssr.json",
    "npm-check-updates": "./node_modules/.bin/ncu",
    "connect-to-database": "npm run ts-node -- src/service/server/data-access/database-connector.ts | pino-pretty",
    "/": "___UTILITY_COMMANDS___",
    "ts-node": "./node_modules/.bin/ts-node --transpile-only -r dotenv/config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artembert/461957-typoteka-3.git"
  },
  "author": "Artem Beresnev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artembert/461957-typoteka-3/issues"
  },
  "homepage": "https://github.com/artembert/461957-typoteka-3#readme",
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/concurrently": "6.2.0",
    "@types/cookie-parser": "1.4.2",
    "@types/csurf": "1.11.0",
    "@types/express": "4.17.9",
    "@types/jest": "26.0.19",
    "@types/jsonwebtoken": "8.5.0",
    "@types/multer": "1.4.5",
    "@types/node": "14.14.14",
    "@types/pg": "7.14.7",
    "@types/pino": "6.3.4",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.10.0",
    "@typescript-eslint/parser": "4.10.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.15.0",
    "eslint-config-htmlacademy": "0.6.0",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-react": "7.21.5",
    "jest": "26.6.3",
    "nodemon": "2.0.6",
    "npm-check-updates": "10.2.5",
    "package-json-type": "1.0.3",
    "pino-pretty": "4.3.0",
    "prettier": "2.2.1",
    "shelljs": "0.8.4",
    "sqlite3": "5.0.1",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
